<%- include('partiall/header.ejs') %>

<div id="loading"></div>
<section id="category" class="section-p1">
    <h2>Our <%= category%> Collection</h2>
    <p>All Collection with New Morden Design</p>
    <div class="cat-container">
        
    <%    products.forEach((product)=>{ %>
       
       
