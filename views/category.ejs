                <h5><%=product.name%></h5>
                <div class="star"> 
                    <i class="fas fa-star"></i> 
                    <i class="fas fa-star"></i>  
                    <i class="fas fa-star"></i> 
                    
                </div>
                <h4> <%=product.price%></h4>
            </div>
