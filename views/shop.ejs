        <form action="/shop/<%=Product[0].id%>/addToCart" method="get">
        <div class="single-pro-details">
     
            <h6><%=Product[0].category%></h6>
            <h4><%=Product[0].name%></h4>
            <h2><%=Product[0].price%></h2>
        
            <select>
                <option>Select Size</option>
                <option>Small</option>
                <option>Medium</option>
                <option>Large</option>
                <option>Extra Large</option>
            </select>
            <input type="number" value="1" style="display: block;">
            <button type="submit"  class="btn btn-success addToCart">Add To Cart</button>
            <h4>Product Details</h4>
            <span><%=Product[0].desc%></span>
        </div>
    </form>
