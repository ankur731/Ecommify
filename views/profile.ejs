<div class="row">
    <div class="col-lg-3">
        <div class="img-container">
            <img src="../images/profile.png" alt="profile error">
            <h3><%= user[0].firstName%> <%= user[0].lastName%></h3>
        </div>
    </div>
    <div class="col-lg-9">
        <div class="container">
            <div class="title">Personal Details <span id="edit">Edit</span></div>
            <form action="/profile/101" method="post">
              <div class="user__details">
                <div class="input__box">
                  <span class="details" >First Name</span>
                  <input readonly type="text" name="firstname" value="<%=user[0].firstName%>" required>
                </div>
                <div class="input__box">
                  <span class="details">Last Name</span>
                  <input readonly type="text" name="lastname" value="<%=user[0].lastName%>" required>
                </div>
                <div class="input__box">
                  <span class="details">Address</span>
                  <input readonly type="text" name="address"  value="<%=user[0].address%>" >
                </div>
                <div class="input__box">
                  <span class="details">City</span>
                  <input readonly type="text" name="city" value="<%=user[0].city%>" >
                </div>
                <div class="input__box">
                  <span class="details">Email</span>
                  <input readonly type="email" name="email" value="<%=user[0].email%>" required>
                </div>
                <div class="input__box">
                  <span class="details">Phone Number</span>
                  <input readonly type="text" name="phone" placeholder="012-345-6789" >
                </div>
                <div class="input__box">
                  <span class="details">Password</span>
                  <input readonly type="password" value="<%=user[0].password%>" required>
                </div>
                <div class="input__box">
                  <span class="details">Confirm Password</span>
                  <input readonly type="password" value="<%=user[0].password%>" required>
                </div>
          
              </div>
              <div class="gender__details">
                <input required   readonly type="radio" name="gender" value="male" id="dot-1">
                <input required readonly type="radio" name="gender" value="female" id="dot-2">
                <input required readonly type="radio" name="gender" value="other" id="dot-3">
                <span class="gender__title">Gender</span>
                <div class="category">
                  <label for="dot-1">
                    <span class="dot one"></span>
                    <span>Male</span>
                  </label>
                  <label for="dot-2">
                    <span class="dot two"></span>
                    <span>Female</span>
                  </label>
                  <label for="dot-3">
                    <span class="dot three"></span>
                    <span>Prefer not to say</span>
                  </label>
                </div>
              </div>
              <div class="d-grid mx-auto">
                <button disabled  class="btn btn-success" type="submit" >Update</button>
              </div>
            </form>
          </div>
    </div>
</div>
<script>
    document.getElementById('edit').addEventListener('click', ()=>{
  var b = document.getElementsByTagName('input');
  for (var i = 0; i < b.length-3; i++) {
  b[i].removeAttribute("readonly");
}
 document.querySelector(".btn").removeAttribute("disabled");
})
</script>




